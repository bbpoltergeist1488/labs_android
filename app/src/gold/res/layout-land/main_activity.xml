<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ppolab.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_vert"
        android:name="com.example.ppolab.DataFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/input" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_vert2"
        android:name="com.example.ppolab.DKFragment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/button228" />
</LinearLayout>